{
    "manifest_version": 3,
    "name": "SloWey - Story Notification",
    "version": "1.0",
    "description": "Receive notifications when a specific friend views your story.",
    "permissions": [
        "notifications",
        "storage",
        "activeTab"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "host_permissions": [
        "https://graph.facebook.com/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}